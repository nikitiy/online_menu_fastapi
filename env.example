# === Database settings ===
SQL_HOST=localhost
SQL_PORT=5432
SQL_DATABASE=backoffice
SQL_USER=postgres
SQL_PASSWORD=password

# === JWT settings ===
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth settings
# === Google OAuth ===
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# === Yandex OAuth ===
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret
YANDEX_REDIRECT_URI=http://localhost:8000/api/v1/auth/yandex/callback

# === VK OAuth ===
VK_CLIENT_ID=your-vk-client-id
VK_CLIENT_SECRET=your-vk-client-secret
VK_REDIRECT_URI=http://localhost:8000/api/v1/auth/vk/callback

# === URLs ===
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# === Auth / Middleware ===
AUTH_EXCLUDED_PATHS=/docs,/redoc,/openapi.json,/api/v1/auth/,/api/v1/location/geocoding/,/api/v1/location/locations/,/api/v1/health/

# === Geocoding settings ===
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key
MAPBOX_API_KEY=your-mapbox-api-key
NOMINATIM_USER_AGENT=BackofficeGeocoder/1.0
DEFAULT_GEOCODING_PROVIDER=google
GEOCODING_CACHE_TTL=86400
GEOCODING_RATE_LIMIT=100
GEOCODING_RATE_PERIOD=3600
GEOCODING_TIMEOUT=10
GEOCODING_MAX_RETRIES=3

# === MinIO S3 settings ===
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_NAME=menu-images
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_REGION=us-east-1
MINIO_USE_HTTPS=false

# === File upload settings ===
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,bmp,svg
GENERATE_THUMBNAILS=true
PRESIGNED_URL_EXPIRY=3600

# === Logging ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_REQUESTS=true
LOG_BODY_LIMIT=4096

# === CORS ===
CORS_ENABLED=true
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# === Kafka ===
# Comma-separated list of brokers, e.g. localhost:9092,broker2:9092
KAFKA_BROKERS=
KAFKA_CLIENT_ID=backoffice-app
KAFKA_TOPIC_PREFIX=
# Optional Kafka security
KAFKA_SECURITY_PROTOCOL=
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
